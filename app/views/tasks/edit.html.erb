
<style>
    ul li {color:red}
</style>


<h1>Edit a Task</h1>
<%= form_for @task, url: project_task_path do |f| %>
    <ul>
      <% @task.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :status %><br />
      <%= f.text_field :status %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>