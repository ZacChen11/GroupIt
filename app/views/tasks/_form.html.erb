<%= form_for [@project,@task] do |f| %>
    <%= render partial: 'users/error_messages', object: @task, as: :item %>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <br/>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
    <br/>
    <p>
      <%= f.label :status %><br/>
      <%= f.select :status, options_for_select([["Open", 1], ["In Progress", 2], ["Waiting", 3], ["Resloved", 4]], :selected => @task.status)%>
    </p>
    <br/>
    <p>
      <%= f.label :Assign_This_Task %><br/>
      <%= f.collection_select :assignee_id, User.where(activated: true), :id, :user_name, prompt: "Please select a user" %>
    </p>
    <br/>
    <p>
      <%= f.submit %>
    </p>
<% end %>
