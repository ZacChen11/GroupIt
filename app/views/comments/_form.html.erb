<%= stylesheet_link_tag 'comments/form.scss' %>
<div class="create-comment">
  <%= form_for [@task.project, @task, @comment] do |f| %>
      <ul>
        <% @comment.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
      </ul>
      <p>
        <%= f.label :body, "Your Comment" %><br/>
        <%= f.text_area :body, style: 'width: 50%' %>
      </p>
      <p><%= f.submit 'Submit' %></p>
  <% end %>

</div>
