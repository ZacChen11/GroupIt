<%= stylesheet_link_tag 'comments.scss' %>
<div id="create_comment">
  <%= form_for [@task.project, @task, @comment] do |f| %>
      <ul>
        <% @comment.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
      </ul>
      <p>
        <%= f.label :body, "Your Comment" %><br/>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.hidden_field :author, :value => current_user.id %>
        <%= f.submit 'Submit' %>
      </p>
  <% end %>

</div>
