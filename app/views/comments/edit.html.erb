<%= stylesheet_link_tag 'comments.scss' %>
<div id="edit_comment">
  <h1>Edit a Comment</h1>
  <%= form_for  [@comment.task.project, @comment.task, @comment] do |f| %>
      <ul>
        <% @comment.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
      </ul>
      <p>
        <%= f.label :body, "Your Comment" %><br/>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.hidden_field :edit, :value => true %>
        <%= f.submit 'Submit' %>
      </p>
  <% end %>
</div>

