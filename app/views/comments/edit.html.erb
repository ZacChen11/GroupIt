<style>
    ul li {color:red}
</style>
<h1>Edit a Comment</h1>
<%= form_for @comment, url: project_task_comment_path(params[:project_id], @comment.task_id, @comment.id) do |f| %>
    <ul>
      <% @comment.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
    <p>
      <%= f.label :body, "Your Comment" %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
<% end %>
