<div class="create_hour">
  <%= form_for @hour, url: [@hour.task.project, @hour.task, @hour] do |f| %>
      <%= render partial: 'users/error_messages', object: @hour, as: :item %>
      <p>
        <%= f.label :Set_Work_Time %>
        <%= f.number_field :work_time, step: 0.5, style: 'display: block' %>
      </p>
      <p>
      <%= f.label :explanation %>
      <%= f.text_area :explanation, style: 'width: 25%; height: 20%; display: block' %>
      </p>
      <p><%= f.submit 'OK'  %></p>
  <% end %>

</div>
